    <script>
        // Hero Carousel
        const images = [
            'https://images.unsplash.com/photo-1576092768241-dec231879fc3?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
            'https://images.unsplash.com/photo-1615486365746-7c0f3f3f2e5e?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80',
            'https://images.unsplash.com/photo-1628258334165-4e9d4e0b7d3b?ixlib=rb-4.0.3&auto=format&fit=crop&w=800&q=80'
        ];
        let currentImg = 0;
        const carousel = document.getElementById('carousel');
        setInterval(() => {
            currentImg = (currentImg + 1) % images.length;
            carousel.innerHTML = `<img src="${images[currentImg]}" alt="Chai Type" style="width: 100%; height: 100%; object-fit: cover; display: block;">`;
        }, 3000);

        // Chai Cards Hover
        document.querySelectorAll('.chai-card').forEach(card => {
            card.addEventListener('mouseenter', () => {
                card.style.transform = 'translateY(-5px)';
                card.style.boxShadow = '0 8px 16px rgba(0,0,0,0.2)';
            });
            card.addEventListener('mouseleave', () => {
                card.style.transform = 'translateY(0)';
                card.style.boxShadow = '0 4px 8px rgba(0,0,0,0.1)';
            });
        });

        // Simple Countdown for Urgency (Demo – Update with real timer)
        setInterval(() => {
            // Add real countdown JS here if needed
        }, 1000);
    </script>
